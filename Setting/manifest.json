{
  "name": "Tatu Blocker",
  "version": "0.1",
  "description": "Bloqueador de an√∫ncios experimental",
  "permissions": [
      "contentSettings",
      "cookies",
      "webRequest", 
      "webRequestBlocking", 
      "<all_urls>",
      "privacy",
      "tabs", 
      "webNavigation", 
      "notifications",
      "contextMenus",
      "privacy",
      "storage",
      "tabs",
      "unlimitedStorage",
      "webNavigation",
    
     
    ],
  "background": {
    "page": "background.html"
	},
	"browser_action": {
	  "default_icon": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png"
	  },
	  "default_title": "Tatu Blocker",
	  "default_popup": "popup.html"
	},
	"commands": {
	  "launch-element-zapper": {
		"description": "__MSG_popupTipZapper__"
	  },
	  "launch-element-picker": {
		"description": "__MSG_popupTipPicker__"
	  },
	  "launch-logger": {
		"description": "__MSG_popupTipLog__"
	  },
	  "open-dashboard": {
		"description": "__MSG_popupTipDashboard__"
	  },
	  "relax-blocking-mode": {
		"description": "__MSG_relaxBlockingMode__"
	  }
	},
	"content_scripts": [
	  {
	"matches": [
		  "http://*/*",
		  "https://*/*"
		  "https://easylist.to/*",
		  "https://*.fanboy.co.nz/*",
		  "https://filterlists.com/*",
		  "https://forums.lanik.us/*",
		  "https://github.com/*",
		  "https://*.github.io/*"	
	],
	js": [
		  "/js/vapi.js",
		  "/js/vapi-client.js",
		  "/js/scriptlets/subscriber.js"
		  ],
	"all_frames": true,
		"match_about_blank": true,
		"run_at": "document_start"
	  },
	  
   "scripts": [
      "blocked_domains.js",
      "blocked_parts.js", 
      "background.js", 
      "blocked_cosmetic.js",
      "blocked_js.js",
      "script.js"
    ]
  },
  "browser_action": {
    "default_icon": {
        "19": "tatuBlocker.png",
        "38": "tatuBlocker.png"
    },
    "default_title": "Tatu Blocker",
    "default_popup": "popup.html"
},
  "manifest_version": 2

